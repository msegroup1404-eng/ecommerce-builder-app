{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "jsx": "react-jsx",
        "noEmit": true
    }
}