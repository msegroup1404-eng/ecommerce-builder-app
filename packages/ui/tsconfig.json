{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "esModuleInterop": true,
    "paths": {
      "@repo/ui/*": [
        "./src/*"
      ],
      "#*": [
        "./src/*"
      ],
      "#components/*": [
        "./src/components/*"
      ],
      "#lib/*": [
        "./src/lib/*"
      ],
      "#utils": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}